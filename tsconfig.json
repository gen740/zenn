{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
